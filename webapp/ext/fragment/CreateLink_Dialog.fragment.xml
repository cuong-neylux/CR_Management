<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Dialog title="{@i18n>tasktable_dialog}" id="createLinkDialog">
        <l:VerticalLayout id="createLinkDialog-VerticalLayout" class="sapUiSmallMarginBeginEnd" width="550px">
            <l:content>
                <Label id="createLinkDialog-Text" required="true" design="Bold" text="Text" labelFor="taskTextInput" />
                <TextArea id="linkTextInput" placeholder="Enter Text" width="100%" maxLength="255" required="true"/>

                <Label id="createLinkDialog-URL" required="true" design="Bold" text="Text" labelFor="taskTextInput" />
                <TextArea id="linkURLInput" placeholder="Enter URL" width="100%" maxLength="255" required="true"/>
            </l:content>
        </l:VerticalLayout>

        <beginButton>
            <Button text="{@i18n>OKButton}" press="onOKClick" id="Link-Dialog-OKButton" />
        </beginButton>
        <endButton>
            <Button text="{@i18n>CancelButton}" press="onCancelClick" id="Link-Dialog-CancelButton" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
