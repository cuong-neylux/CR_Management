<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
    <Dialog title="{@i18n>tasktable_dialog}" id="createTaskDialog" beginButton="OK" endButton="Cancel">
        <l:VerticalLayout id="_IDGenVerticalLayout1" class="sapUiSmallMarginBeginEnd" width="550px">
            <l:content>
                <Label id="createTaskDialog-Text" text="Text" labelFor="taskTextInput" />
                <Input id="taskTextInput" placeholder="Enter Task" />

                <Label id="createTaskDialog-AssignedTeam" text="Assign To" labelFor="taskAssignedTeam" />
                <ComboBox
                id="taskAssignedTeam"
				items="{path: 'TeamSet'}
				}">
                <core:Item id="createTaskDialog-Item" key="{TeamName}" text="{TeamName}" />
			</ComboBox>
            </l:content>
        </l:VerticalLayout>

        <beginButton>
            <Button text="{@i18n>OKButton}" press="onOKClick" id="dialog-OKButton" />
        </beginButton>
        <endButton>
            <Button text="{@i18n>CancelButton}" press="onCancelClick" id="dialog-CancelButton" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
