<mvc:View
	controllerName="NYX.bsincrv01.ext.controller.PlanningCalendar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
	<VBox id="planningCalendar-Vbox" class="sapUiSmallMargin">
		<PlanningCalendar
				id="PC1"
				startDate="{path: '/startDate'}"
				rows="{path: '/people'}"
				appointmentsVisualization="Filled">
			<rows>
				<PlanningCalendarRow
				id="planningCalendar-Row"
						icon="{pic}"
						title="{name}"
						text="{role}"
						enableAppointmentsDragAndDrop="true"
						enableAppointmentsResize="true"
						enableAppointmentsCreate="true"
						appointmentDrop="handleAppointmentDrop"
						appointmentDragEnter="handleAppointmentDragEnter"
						appointmentResize="handleAppointmentResize"
						appointmentCreate="handleAppointmentCreate"
						appointments="{path : 'appointments', templateShareable: false}">
					<appointments>
						<unified:CalendarAppointment
						id="planningCalendar-Appointment"
								startDate="{start}"
								endDate="{end}"
								icon="{pic}"
								title="{title}"
								text="{info}"
								type="{type}"
								tentative="{tentative}">
						</unified:CalendarAppointment>
					</appointments>
				</PlanningCalendarRow>
			</rows>
		</PlanningCalendar>
	</VBox>
</mvc:View>