<mvc:View height="100%" controllerName="NYX.bsincrv01.ext.controller.UploadSet" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:upload="sap.m.upload">
    <upload:UploadSet
        id="UploadSet"
        instantUpload="false"
        showIcons="true"
        uploadEnabled="true"
        terminationEnabled="true"
        fileTypes="txt,pdf,png,doc,jpg,xlxs"
        maxFileNameLength="30"
        maxFileSize="20"
        uploadUrl="/sap/opu/odata/nyx/BS_IN_CR_GP01_V01_SRV/DocumentSet"
        items="{path: 'DocumentSet'}"
    >
        <upload:toolbar>
            <OverflowToolbar id="UploadSet-OverflowToolbar">
                <Button id="uploadSelectedButton" text="Upload selected" press="onUploadSelectedButton" />
                <Button id="downloadSelectedButton" text="Download selected" press="onDownloadSelectedButton" />
            </OverflowToolbar>
        </upload:toolbar>
        <upload:items>
            <upload:UploadSetItem id="UploadSet-UploadSetItem" fileName="{FileName}" mediaType="{MimeType}" url="{Url}">
                <upload:attributes>
                    <ObjectAttribute id="UploadSet-ObjectAttribute" title="Uploaded By" text="{UploadUserFullname}" />
                </upload:attributes>
                <upload:attributes>
                    <ObjectAttribute id="UploadSet-ObjectAttribute2" title="Uploaded On" text="{UploadTimestamp}" />
                </upload:attributes>
                <upload:markers>
                    <ObjectMarker id="UploadSet-ObjectMarker" type="{type}" visibility="{visibility}" />
                </upload:markers>
                <upload:statuses>
                    <ObjectStatus id="UploadSet-ObjectStatus" title="{title}" text="{text}" state="{state}" icon="{icon}" active="{active}" />
                </upload:statuses>
            </upload:UploadSetItem>
        </upload:items>
    </upload:UploadSet>
</mvc:View>
