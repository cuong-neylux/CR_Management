<mvc:View id="UploadSetView" height="100%" controllerName="NYX.bsincrv01.ext.controller.UploadSet" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:upload="sap.m.upload" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified">
    <l:VerticalLayout id="idUploadSetViewVerticalLayout">
        <u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" />
        <Button id="idUploadSetViewButton" text="Upload File" press="handleUploadPress" />
    </l:VerticalLayout>
    <upload:UploadSet
        id="UploadSet"
        instantUpload="true"
        showIcons="true"
        uploadEnabled="true"
        terminationEnabled="true"
        fileTypes="jpg,txt,ppt,doc,xls,pdf,png,xlsx"
        maxFileNameLength="64"
        maxFileSize="20"
        uploadUrl="/sap/opu/odata/nyx/BS_IN_CR_GP01_V01_SRV/DocumentSet"
        items="{path: 'CR_Document',
				templateShareable: false,
				sorter: {
					path: 'UploadUser',
					descending: false,
					group: true
				}"
    >
        <upload:items>
            <upload:UploadSetItem id="UploadSetItem" fileName="{FileName}" mediaType="{MimeType}" url="{Url}">
                <upload:attributes>
                    <ObjectAttribute id="UploadSetAttribute" title="{Uploaded By}" text="{UploadUserFullname}" />
                </upload:attributes>
                <upload:attributes>
                    <ObjectAttribute id="UploadSetAttribute2" title="{Uploaded On}" text="{UploadTimestamp}" />
                </upload:attributes>
                <upload:markers>
                    <ObjectMarker id="UploadSetMarker" type="{MimeType}" visibility="{visibility}" />
                </upload:markers>
            </upload:UploadSetItem>
        </upload:items>
    </upload:UploadSet>
</mvc:View>
