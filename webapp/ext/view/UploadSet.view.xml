<mvc:View id="UploadSetView" height="100%" controllerName="NYX.bsincrv01.ext.controller.UploadSet" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:upload="sap.m.upload" xmlns:l="sap.ui.layout" xmlns:u="sap.ui.unified">
    <l:VerticalLayout id="idUploadSetViewVerticalLayout">
        <u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" uploadComplete="handleUploadComplete" />
        <Button id="idUploadSetViewButton" text="Upload File" press="handleUploadPress" />
    </l:VerticalLayout>
    <upload:UploadSet
        id="UploadSet"
        instantUpload="true"
        showIcons="true"
        uploadEnabled="true"
        terminationEnabled="true"
        fileTypes="jpg,txt,ppt,doc,xls,pdf,png,xlsx"
        maxFileNameLength="64"
        maxFileSize="20"
        uploadUrl="/sap/opu/odata/nyx/BS_IN_CR_GP01_V01_SRV/DocumentSet"
        items="{path: 'CR_Document', templateShareable: false}"
    >
        <upload:items>
            <upload:UploadSetItem
                id="UploadSetItem"
                fileName="{FileName}"
                mediaType="{mediaType}"
                url="{Url}"
                thumbnailUrl="{thumbnailUrl}"
                attributes="{path: 'attributes', templateShareable: false}"
                markers="{path: 'markers', templateShareable: false}"
                statuses="{path: 'statuses', templateShareable: false}"
                uploadState="{uploadState}"
            >
                <upload:attributes>
                    <ObjectAttribute id="UploadSetAttribute" title="{title}" text="{text}" active="{active}" />
                </upload:attributes>
                <upload:markers>
                    <ObjectMarker id="UploadSetMarker" type="{type}" visibility="{visibility}" />
                </upload:markers>
                <upload:statuses>
                    <ObjectStatus id="UploadSetStatus" title="{title}" text="{text}" state="{state}" icon="{icon}" active="{active}" />
                </upload:statuses>
            </upload:UploadSetItem>
        </upload:items>
    </upload:UploadSet>
    <List id="progressList" />
</mvc:View>
