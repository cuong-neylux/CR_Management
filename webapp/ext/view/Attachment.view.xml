<mvc:View height="100%" controllerName="NYX.bsincrv01.ext.controller.Attachment" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:upload="sap.m.upload">
    <upload:UploadSet
        id="UploadSet"
        instantUpload="false"
        showIcons="true"
        uploadEnabled="true"
        terminationEnabled="true"
        fileTypes="txt,pdf,png,doc,jpg,xlxs"
        maxFileNameLength="30"
        maxFileSize="200"
        uploadUrl="/sap/opu/odata/nyx/BS_IN_CR_GP01_V01_SRV/DocumentSet"
        items="{path: '/items', templateShareable: false}"
    >
        <upload:toolbar>
            <OverflowToolbar id="UploadSet-OverflowToolbar">
                <Button id="uploadSelectedButton" text="Upload selected" press="onUploadSelectedButton" />
                <Button id="downloadSelectedButton" text="Download selected" press="onDownloadSelectedButton" />
            </OverflowToolbar>
        </upload:toolbar>
        <upload:items>
            <upload:UploadSetItem id="UploadSet-UploadSetItem"
                fileName="{fileName}"
                mediaType="{mediaType}"
                url="{url}"
                thumbnailUrl="{thumbnailUrl}"
                attributes="{path: 'attributes', templateShareable: false}"
                markers="{path: 'markers', templateShareable: false}"
                statuses="{path: 'statuses', templateShareable: false}"
                uploadState="{uploadState}"
            >
                <upload:attributes>
                    <ObjectAttribute id="UploadSet-ObjectAttribute" title="{title}" text="{text}" active="{active}" />
                </upload:attributes>
                <upload:markers>
                    <ObjectMarker id="UploadSet-ObjectMarker" type="{type}" visibility="{visibility}" />
                </upload:markers>
                <upload:statuses>
                    <ObjectStatus id="UploadSet-ObjectStatus" title="{title}" text="{text}" state="{state}" icon="{icon}" active="{active}" />
                </upload:statuses>
            </upload:UploadSetItem>
        </upload:items>
    </upload:UploadSet>
</mvc:View>
