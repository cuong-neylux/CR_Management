<mvc:View
	height="100%"
	controllerName="NYX.bsincrv01.ext.controller.UploadCollection"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
		<UploadCollection
			id="UploadCollection"
			maximumFilenameLength="55"
			maximumFileSize="10"
			multiple="false"
			change="onChange"
			fileSizeExceed="onFileSizeExceed"
			selectionChange="onSelectionChange"
			typeMissmatch="onTypeMissmatch"
			uploadComplete="onUploadComplete"
			beforeUploadStarts="onBeforeUploadStarts"
			items="{
				path: '/items',
				templateShareable: false
			}"
			mode="MultiSelect">
			<toolbar>
				<OverflowToolbar id="myId">
					<Title id="attachmentTitle" />
					<ToolbarSpacer id="UploadCollection-ToobarSpacer" />
					<Button
						id="downloadButton"
						text="Download"
						press="onDownloadItem"
						enabled="false"
						type="Transparent" />
					<Button
						id="versionButton"
						text="Upload a new version"
						press="onVersion"
						enabled="false"
						type="Transparent" />
					<UploadCollectionToolbarPlaceholder id="UploadCollection-UploadCollectionToolbarPlaceholder"/>
				</OverflowToolbar>
			</toolbar>
			<items>
				<UploadCollectionItem id="UploadCollection-UploadCollectionItem"
					documentId="{documentId}"
					fileName="{fileName}"
					mimeType="{mimeType}"
					thumbnailUrl="{thumbnailUrl}"
					url="{url}"
					enableEdit="false"
					enableDelete="false"
					visibleDelete="false"
					visibleEdit="false"
					attributes="{
						path: 'attributes',
						templateShareable: false
					}"
					statuses="{
						path: 'statuses',
						templateShareable: false
					}"
					selected="{selected}">
					<attributes>
						<ObjectAttribute id="UploadCollection-ObjectAttribute"
							title="{title}"
							text="{
								parts: [ 'text', 'type' ],
								formatter : '.formatAttribute'
							}"
							active="false" />
					</attributes>
					<statuses>
						<ObjectStatus id="UploadCollection-ObjectStatus"
                            title="{title}"
							text="{text}"
							state="{state}" />
					</statuses>
				</UploadCollectionItem>
			</items>
		</UploadCollection>
</mvc:View>
