<mvc:View controllerName="sap.ui.table.sample.DnD.Controller" xmlns="sap.ui.table" xmlns:dnd="sap.ui.core.dnd" xmlns:mvc="sap.ui.core.mvc" xmlns:c="sap.ui.core" xmlns:m="sap.m" height="100%">
    <m:Page id="taskViewPage" showHeader="false" enableScrolling="false" class="sapUiContentPadding">
        <m:content>
            <m:HBox id="taskViewHbox" renderType="Bare">
                <Table id="taskViewLeftTable" selectionMode="Single" ariaLabelledBy="title" rows="{
						path: 'CR_Task',
						filters: {path: 'Rank', operator: 'EQ', value1: '0'}
					}" visibleRowCount="10">
                    <extension>
                        <m:OverflowToolbar id="taskViewLeftTableOverflowToolbar" style="Clear">
                            <m:Title id="title" text="In Process" />
                        </m:OverflowToolbar>
                    </extension>
                    <columns>
                        <Column id="taskViewLeftTableColumn1" sortProperty="Name" filterProperty="Name">
                            <m:Text id="taskViewLeftTable1Column1ColumnName" text="Task" />
                            <template>
                                <m:Text id="taskViewLeftTable1Column1TaskDescription" text="{Description}" wrapping="false" />
                            </template>
                        </Column>
                        <Column id="taskViewLeftTableColumn2" sortProperty="Category" filterProperty="Category">
                            <m:Text id="taskViewLeftTable1Column2ColumnName" text="Category" />
                            <template>
                                <m:Text id="taskViewLeftTable1Column1AssignedTeam" text="{AssignedTeam}" wrapping="false" />
                            </template>
                        </Column>
                    </columns>
                    <dragDropConfig>
                        <dnd:DragInfo id="taskViewLeftTableDragInfo" groupName="moveToTable2" sourceAggregation="rows" dragStart="onDragStart" />
                        <dnd:DropInfo id="taskViewLeftTableDropInfo" groupName="moveToTable1" drop="onDropTable1" />
                    </dragDropConfig>
                </Table>
                <m:VBox id="taksTableVBox" justifyContent="Center" class="sapUiTinyMarginBeginEnd">
                    <m:Button id="moveToRightTableButton" class="sapUiTinyMarginBottom" icon="sap-icon://navigation-right-arrow" tooltip="Move to selected" press="moveToTable2" />
                    <m:Button id="moveToLeftTableButton" icon="sap-icon://navigation-left-arrow" tooltip="Move to available" press="moveToTable1" />
                </m:VBox>
                <Table id="taskViewRightTable" selectionMode="Single" ariaLabelledBy="title2" rows="{
						path: 'CR_Task',
						filters: {path: 'Status', operator: 'EQ', value1: 'In Process'},
						sorter: {path: 'AssignedTeam', ascending: true}
					}" visibleRowCount="10" noData="Please drag-and-drop products here.">
                    <extension>
                        <m:OverflowToolbar id="taskViewRightTableOverflowToolbar" style="Clear">
                            <m:Title id="title2" text="Done" />
                            <m:ToolbarSpacer  id="taskViewRightTableToobarSpacer"/>
                            <m:Button id="taskViewRightTableMoveUpButton" icon="sap-icon://navigation-up-arrow" tooltip="Move up" press="moveUp" />
                            <m:Button id="taskViewRightTableMoveDownButton" icon="sap-icon://navigation-down-arrow" tooltip="Move down" press="moveDown" />
                        </m:OverflowToolbar>
                    </extension>
                    <columns>
                        <Column id="taskViewRightTableColumn1">
                            <m:Text id="taskViewRightTableColumn1ColumnName" text="Product Name" />
                            <template>
                                <m:Text id="taskViewRightTableColumn1TaskDescription" text="{Description}" wrapping="false" />
                            </template>
                        </Column>
                        <Column id="taskViewRightTableColumn2">
                            <m:Text id="taskViewRightTableColumn2ColumnName" text="Category" />
                            <template>
                                <m:Text id="taskViewRightTableColumn2AssignedTeam" text="{AssignedTeam}" wrapping="false" />
                            </template>
                        </Column>
                    </columns>
                    <dragDropConfig>
                        <dnd:DragInfo id="taskViewRightTableDragInfo" groupName="moveToTable1" sourceAggregation="rows" dragStart="onDragStart" />
                        <dnd:DropInfo id="taskViewRightTableDropInfo" groupName="moveToTable2" targetAggregation="rows" dropPosition="Between" drop="onDropTable2" />
                        <dnd:DragDropInfo id="taskViewRightTableDragDropInfo" sourceAggregation="rows" targetAggregation="rows" dropPosition="Between" dragStart="onDragStart" drop="onDropTable2" />
                    </dragDropConfig>
                </Table>
            </m:HBox>
        </m:content>
    </m:Page>
</mvc:View>
