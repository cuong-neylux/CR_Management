<core:View
	id="timelineView"
	controllerName="NYX.bsincrv01.ext.controller.Timeline"
	xmlns="sap.suite.ui.commons"
	xmlns:core="sap.ui.core.mvc"
	xmlns:m="sap.m"
	width="100%"
	height="100%">
	<m:Toolbar id="section4-toolbar" height="70px">
		<m:Label id="section4-label" text="Panel Height:" class="sapUiSmallMarginTop"/>
		<m:Slider id="idSlider"
		          showAdvancedTooltip="true"
		          width="400px"
		          liveChange="sliderChanged"
		          min="300"
		          max="500"
		          value="300"
		          enableTickmarks="false"
		          step="1"
		          class="sapUiSmallMarginTop"/>
	</m:Toolbar>
	<m:Panel id="idPanel"
	         height="300px">
		<Timeline
			id="idTimeline"
			axisOrientation="Horizontal"
			enableDoubleSided="false"
			lazyLoading="true"
			textHeight="automatic"
			content="{CR_Comment}"
			enableScroll="false"
			growingThreshold="10000"
			showHeaderBar="false"
			showIcons="true">
			<content>
				<TimelineItem
					id="idTemplateItem"
					maxCharacters="50000"
					dateTime="{CommentTimestamp}"
					title="{Title}"
					text="{Note}"
					userName="{CommentUserFullname}"
					userPicture="https://neylux.com/wp-content/uploads/Image-03_cropped.png">
				</TimelineItem>
			</content>
		</Timeline>
	</m:Panel>
</core:View>
