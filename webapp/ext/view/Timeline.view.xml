<core:View
	id="timelineView"
	controllerName="NYX.bsincrv01.ext.controller.Timeline"
	xmlns="sap.suite.ui.commons"
	xmlns:core="sap.ui.core.mvc"
	xmlns:m="sap.m"
	width="100%"
	height="100%">
	<m:Toolbar id="section4-toolbar" height="90px">
		<m:Label id="section4-label" text="Panel Height:" class="sapUiSmallMarginTop"/>
		<m:Slider id="idSlider"
		          showAdvancedTooltip="true"
		          width="400px"
		          liveChange="sliderChanged"
		          min="300"
		          max="800"
		          value="300"
		          enableTickmarks="true"
		          step="20"
		          class="sapUiSmallMarginTop"/>
	</m:Toolbar>
	<m:Panel id="idPanel"
	         height="350px">
		<Timeline
			id="idTimeline"
			axisOrientation="Horizontal"
			enableDoubleSided="false"
			lazyLoading="true"
			textHeight="automatic"
			content="{CR_Comment}"
			showHeaderBar="false"
			showIcons="false">
			<content>
				<TimelineItem
					id="idTemplateItem"
					maxCharacters="5000"
					dateTime="{CommentDate}"
					title=""
					text="{Note}"
					userName="{CommentUser}">
				</TimelineItem>
			</content>
		</Timeline>
	</m:Panel>
</core:View>
